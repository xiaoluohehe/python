<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <property name="APP_Name" value="zzwc_cms_admin" />

    <contextName>${APP_Name}</contextName>

    <property name="log_path" value="/zzwc_cms_log/admin" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d]-[%-5level]-[%thread]-[%logger]-[%X{user}]-%msg%n
            </pattern>
        </encoder>
        <target>System.out</target>
    </appender>

    <appender name="ROLLING_ERROR"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <maxHistory>30</maxHistory>
            <fileNamePattern>${log_path}/error/%d{yyyy-MM-dd}/${APP_Name}_error.%i.log.zip
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>[%d]-[%-5level]-[%thread]-[%logger]-[%X{user}]-%msg%n
            </pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter"><!-- 只打印错误日志 -->
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <appender name="ROLLING_INFO"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <maxHistory>30</maxHistory>
            <fileNamePattern>${log_path}/info/%d{yyyy-MM-dd}/${APP_Name}_info.%i.log.zip
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>[%d]-[%-5level]-[%thread]-[%logger]-[%X{user}]-%msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="ROLLING_DEBUG"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <maxHistory>6</maxHistory>
            <fileNamePattern>${log_path}/debug/%d{yyyy-MM-dd}/${APP_Name}_debug.%i.log.zip
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>[%d]-[%-5level]-[%thread]-[%logger]-[%X{user}]-%msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- 异步输出 -->
    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold>0</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>512</queueSize>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <!-- <appender-ref ref="FILE" /> -->
        <appender-ref ref="STDOUT" />
    </appender>

    <appender name="ROLLING_INFO_PACKAGE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <maxHistory>30</maxHistory>
            <fileNamePattern>${log_path}/package/settlement/%d{yyyy-MM-dd}/${APP_Name}.%i.log.zip
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>[%d]-[%-5level]-[%thread]-[%logger]-[%X{user}]-%msg%n
            </pattern>
        </encoder>
        <filter class="com.zzwc.cms.admin.logback.filter.PackageFilter">
            <packageNames>${settlement_job}</packageNames>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>


    <logger name="com.zzwc.cms" level="INFO">
        <appender-ref ref="ROLLING_ERROR" />
        <appender-ref ref="ROLLING_INFO" />
    </logger>


    <logger name="org.springframework" level="INFO">
        <appender-ref ref="ROLLING_DEBUG" />
        <appender-ref ref="ROLLING_ERROR" />
    </logger>


    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="ROLLING_INFO_PACKAGE" />
    </root>

</configuration>